{
  "manifest_version": 3,
  "name": "Localhosting",
  "description": "A utility for managing and developing in a localhost environment.",
  "version": "0.1",
  "author": "mail@jonesy.dev",
  "minimum_chrome_version": "93",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "public/icons/manifest/icon_16.png",
      "32": "public/icons/manifest/icon_32.png",
      "48": "public/icons/manifest/icon_48.png",
      "128": "public/icons/manifest/icon_128.png"
    }
  },
  "icons": {
    "16": "public/icons/manifest/icon_16.png",
    "32": "public/icons/manifest/icon_32.png",
    "48": "public/icons/manifest/icon_48.png",
    "128": "public/icons/manifest/icon_128.png"
  },
  "options_page": "src/config/config.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["history", "tabs", "activeTab", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
